<h1>Listing articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |article| %>
	<tr>
		<td><span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{article.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{article.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>"> <%= article.title %> </span></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-xs'  %></td>
		<td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info btn-xs'  %></td>
		<td><%= link_to 'Destory', article_path(article),
		method: :delete,
		date: { confirm: 'Are you sure?' },
		class: 'btn btn-danger btn-xs'  %></td>
	</tr>
	<% end %>
</table>
<%= link_to new_article_path, class: 'btn btn-success' do %>
<i class="glyphicon glyphicon-plus"></i> New article
<% end %>
